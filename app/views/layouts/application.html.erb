<!DOCTYPE html>
<html>
<head>
  <title>Bball</title>
  <%= stylesheet_link_tag "style" %>
  <%= render_javascripts %>
  <%= csrf_meta_tag %>
  <script>
  if (Modernizr.localstorage){
    localStorage.clear();
  } else {
    console.log("boo");
    // resort to cookies as best you can
  }
  
  $(function(){
    $("#playerTemplate").template("playerTemplate");

    var gameId = 123;
    game = {id: gameId}
    
    $.getJSON("/teams/1.json", function(data){
      game["home"] = data["team"];
      game["homePlayers"] = data["players"];
      
      $.getJSON("/teams/2.json", function(data){
        game["away"] = data["team"];
        game["awayPlayers"] = data["players"];
        
        localStorage["game."+gameId] = JSON.stringify(game);
        //console.log(JSON.parse(localStorage["game."+gameId]));
        
        app.init();
        
        $(".bench").click(function(){
          var side = $(this).hasClass("home") ? "home" : "away";
          $("#players_bench").removeClass("home away").addClass(side).show();
          
          $("#players_bench").find("div.home").hide();
          $("#players_bench").find("div.away").hide();
          
          $("#players_bench").find("div."+side).show();

          return false;
        });
        
        $("a.close").click(function(){
          $(this).parent().hide();
          return false;
        });
      });

    });
    
    
    

  })
  </script>
</head>
<body>

<%= yield %>

</body>
</html>
